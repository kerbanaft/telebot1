#:import utils kivy.utils
<Button>
    background_normal:''
    background_color: utils.get_color_from_hex('#85877b')


<MyLayout>
    BoxLayout:
        padding:1
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: '0'
            halign: 'right'
            font_size: 60
            size_hint: (1, 0.15)
            multiline: False
        GridLayout:
            cols: 4
            rows: 5
            padding:1
            spacing:1

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'%'
                on_press: root.button_press('%')

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'CE'
                on_press: root.button_press(CE)

            Button:
                id: clear
                size_hint:(.2,.2)
                font_size:32
                text:'C'
                on_press: root.clear()

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'/'
                on_press: root.divide()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'7'
                on_press: root.button_press(7)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'8'
                on_press: root.button_press(8)
            Button:

                size_hint:(.2,.2)
                font_size:32
                text:'9'
                on_press: root.button_press(9)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'*'
                on_press: root.multiply()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'4'
                on_press: root.button_press(4)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'5'
                on_press: root.button_press(5)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'6'
                on_press: root.button_press(6)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'-'
                on_press: root.subtract()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'1'
                on_press: root.button_press(1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'2'
                on_press: root.button_press(2)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'3'
                on_press: root.button_press(3)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'+/-'
                on_press: root.button_press('+/-')
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'.'
                on_press: root.button_press('.')
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'0'
                on_press: root.button_press(0)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'='
                on_press: root.equals()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:'+'
                on_press: root.add()






